{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true
  },
  "include": [
    "server.ts",
    "types.ts",
    "services/**/*.ts",
    "components/EmailTemplates.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "index.tsx",
    "App.tsx",
    "pages/**/*.tsx",
    "mockData.ts"
  ]
}